{
    "extends": "tsconfig/nextjs.json",
    "include": [
        "@types/*.d.ts",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "components/ui-component/Loadable.jsx"
    ],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/types/*": ["@types/*"],
            "@/assets/*": ["assets/*"],
            "@/components/*": ["components/*"],
            "@/configs/*": ["configs/*"],
            "@/helpers/*": ["helpers/*"],
            "@/libs/*": ["libs/*"],
            "@/styles/*": ["styles/*"]
        }
    }
}
